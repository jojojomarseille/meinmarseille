<div class="container col-sm-12">


  <div class="row">

    <div class="product-card ">
      <div class=" bloc-photo  ">
        <%= cl_image_tag @product.photo %>

        <h1> <%=@product.title%> </h1>
        <button type="button" class="btn btn-primary btn-header" data-toggle="modal" data-target="#exampleModal">
        Buchen
      </button>
      </div>
    </div>
  </div>


  <div class="row description">

    <div class="description1 col-sm-7">

      <h2> <%= markdown(@product.subtitle) %> </h2>

      <P><%= markdown(@product.description) %> </P>


    </div>

      <!-- <P> Description3:<%= @product.description3 %> </P> -->










    <div class="bloc-picto-2 col-sm-5">

      <div class="bloc-picto-3">
        <div class="groupepictos1">
          <li>
            <!-- dificulté -->
            <ul> <i class="fas fa-hiking"></i> Schwierigkeit: intermediaire </ul>
            <!-- participants max -->
            <ul> <i class="fas fa-users"></i> Teilnehmer max: <%= @product.jauge %> </ul>
          </li>
        </div>
        <div class="grouppictos2">
          <li>
            <!-- enfants -->
            <ul> <i class="fas fa-child"></i> Kinder: <%= @product.childs %> </ul>
            <!-- durée -->
            <ul> <i class="fas fa-clock"></i> Dauer: <%= @product.duration %> </ul>
          </li>
        </div>
      </div>

      <div class="pricegrid">

        <h3> Richttarif pro Gruppe </h3>
        <div class="row">
          <div class="col-md-4 case ">1 - 5</div>
          <div class="col-md-4 case">6 - 10</div>
          <div class="col-md-4 case">+ de 10</div>
        </div>
        <div class="row">
          <div class="col-md-4 case"><%=@product.price%>€</div>
          <div class="col-md-4 case"><%=@price2%>€</div>
          <div class="col-md-4 case"><%=@price3%>€</div>
        </div>
      </div>

      <button type="button" id= "btn2" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
        Buchen
      </button>

      <div class="Practish">

        <h3>Gut zu wissen</h3>
        <div class="suggline">
            </div>
        <p> <%= markdown(@product.description2) %> </p>
      </div>

<!-- suggestions

 <-->
            <div class="suggtitle">
              <h3>Diese Führung könnte Sie auch interessieren</h3>
            </div>
            <div class="suggline">
            </div>
            <div class="Tips">
             <a href="https://www.laprovence.com/"><h3><%= @suggestion.title%></h3></a>
             <a href="https://www.laprovence.com/"><%= cl_image_tag @suggestion.photo %></a>
            </div>


    </div>

<% if user_signed_in? %>

    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Buchungsanfrage senden</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">

              <% if @product.partner == true %>

              <p>Visitte opérée par <%= @product.partnername %> :</p>
              <%= link_to @product.partnername, @product.partnermail %>

              <% else %>
              <%= render "bookings/form" %>
              <% end %>
            </div>
        </div>
      </div>
      </div>
     </div>

<% else %>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">envoyer une demande de reservation</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">

              merci de creer un compte ou de vous identifier pour faire une demande de reservation
            </div>
            <div class="modal-footer">

            </div>
        </div>
      </div>
      </div>
     </div>

<% end %>

<!-- ci dessous on a une gallerie photo qui ne s'affichera que si il y a plusieurs photos -->
<%if @product.pictures.count > 0 %>
  <div class=" row fotorow">
      <div class="barreseparation">
      </div>

      <div class="glide fotogalerie col-sm-12">
        <div class="glide__track" data-glide-el="track">
          <ul class="glide__slides">
            <% @product.pictures.each do |picture| %>
              <li class="glide__slide fotoelement" data-toggle="modal" data-target="#photoModal<%= picture.id%>"><%= cl_image_tag(picture.photo) %></li>


                  <div class="modal " id="photoModal<%= picture.id %>"  role="dialog">
                    <div class="modal-dialog" role="document">
                      <div class="modal-content">
                          <div class="modal-header">
                            <h5 class="modal-title" id="photoModal<%= picture.id %>Label">coucou</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                              <span aria-hidden="true">&times;</span>
                            </button>
                          </div>
                          <div class="modal-body">
                            <%= cl_image_tag(picture.photo) %>
                          </div>
                      </div>
                    </div>
               </div>










            <% end %>
          </ul>
        </div>
        <div class="glide__arrows" data-glide-el="controls">
          <button class="glide__arrow glide__arrow--left" data-glide-dir="<">prev</button>
          <button class="glide__arrow glide__arrow--right" data-glide-dir=">">next</button>
        </div>
      </div>
  </div>
<% else %>
<% end %>



<div class="barreseparation">
      </div>

<!-- ci dessous le formulaire de contact -->
  <div class="row formulaire">
    <div class="col-sm-12">

        <h3 class="h1-responsive font-weight-bold text-center my-4">Eine Frage? Kontaktieren Sie uns!</h3>
        <p > <%= render "contacts/form" %> </p>




    </div>
  </div>






</div>
