      <div class="pricegrid">
        <h3> Tarif par personne </h3>
        <div class="row">
          <div class="col-md-4 case ">1 - 5</div>
          <div class="col-md-4 case">6 - 10</div>
          <div class="col-md-4 case">+ de 10</div>
        </div>
        <div class="row">
          <div class="col-md-4 case"><%=@product.price%>€</div>
          <div class="col-md-4 case"><%=@price2%>€</div>
          <div class="col-md-4 case"><%=@price3%>€</div>
        </div>
      </div>





      <button type="button" id= "btn2" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
        Reserver
      </button>
    </div>

<% if user_signed_in? %>

    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">envoyer une demande de reservation</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">

              <%= render "bookings/form" %>
            </div>
            <div class="modal-footer">

            </div>
        </div>
      </div>
      </div>
     </div>

<% else %>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">envoyer une demande de reservation</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">

              merci de creer un compte ou de vous identifier pour faire une demande de reservation
            </div>
            <div class="modal-footer">

            </div>
        </div>
      </div>
      </div>
     </div>

<% end %>

<!-- ci dessous on a une gallerie photo qui ne s'affichera que si il y a plusieurs photos -->
<%if @product.pictures.count > 0 %>
  <div class=" row fotorow">
      <div class="barreseparation">
      </div>

      <div class="glide fotogalerie col-sm-10">
        <div class="glide__track" data-glide-el="track">
          <ul class="glide__slides">
            <% @product.pictures.each do |picture| %>
              <li class="glide__slide fotoelement"><%= cl_image_tag(picture.photo) %></li>
            <% end %>
          </ul>
        </div>
        <div class="glide__arrows" data-glide-el="controls">
          <button class="glide__arrow glide__arrow--left" data-glide-dir="<">prev</button>
          <button class="glide__arrow glide__arrow--right" data-glide-dir=">">next</button>
        </div>
      </div>
  </div>
<% else %>
<% end %>

<!-- ci dessous le formulaire de contact -->
  <div class="row formulaire">
    <div class="col-sm-12">
      <section class="mb-4">
        <h3 class="h1-responsive font-weight-bold text-center my-4">Vous avez une question? Contactez-nous</h3>
        <p class="text-center w-responsive mx-auto mb-5"> <%= render "contacts/form" %> </p>
      </section>
    </div>
  </div>



</div>
