          <div class="col-md-4 case">6 - 10</div>
          <div class="col-md-4 case">+ de 10</div>
        </div>
        <div class="row">
          <div class="col-md-4 case"><%=@product.price%></div>
          <div class="col-md-4 case"><%=@price2%></div>
          <div class="col-md-4 case"><%=@price3%></div>
        </div>
      </div>





      <button type="button" id= "btn2" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
        Reserver
      </button>
    </div>

<% if user_signed_in? %>

    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">envoyer une demande de reservation</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">

              <%= render "bookings/form" %>
            </div>
            <div class="modal-footer">

            </div>
        </div>
      </div>
      </div>
     </div>

<% else %>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">envoyer une demande de reservation</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">

              merci de creer un compte ou de vous identifier pour faire une demande de reservation
            </div>
            <div class="modal-footer">

            </div>
        </div>
      </div>
      </div>
     </div>

<% end %>



