<div class="container">



  <div class="row">
    <div class="product-card col-sm-12">
      <div class=" bloc-photo col-sm-12 ">
        <%= cl_image_tag @product.photo %>
        <h1> <%=@product.title%><%=@product.id%></h1>

      </div>

      <div class="row pictos">

          <p class=" bloc-1 col-sm-4"> <%= image_tag "clock-circular-outline.png"%> Durée: 2h </p>
          <P class=" bloc-2 col-sm-4"> <%= image_tag "user.png"%>Nombre de participants: 5 </P>
          <p class="bloc-3 col-sm-4"> Prix: 50€/ personne</p>

      </div>

    </div>
  </div>

  <div class="row description">
    <div class="col-sm-6">
      <h2> <%= @product.subtitle %> </h2>

      <P> <%= @product.description %> </P>
    </div>

    <div class="bloc-picto-2 col-sm-6">
      <li>
        <ul> <%= image_tag "expert-route.png"%> Dificutée: intermediaire </ul>
        <ul> <%= image_tag "multiple-users-silhouette.png"%> Participants max : 10 personnes </ul>
        <ul> <%= image_tag "smiling-baby.png"%> Enfants: oui </ul>
      </li>

      <div class="pricegrid">

      <h5> Tarif par personne </h5>
      <div class="row">
      <div class="col-md-4 case ">1 - 5</div>
      <div class="col-md-4 case">6 - 10</div>
      <div class="col-md-4 case">+ de 10</div>
      </div>

      <div class="row">
      <div class="col-md-4 case"><%=@product.price%></div>
      <div class="col-md-4 case"><%=@price2%></div>
      <div class="col-md-4 case"><%=@price3%></div>
      </div>

      </div>





      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
  Reserver
    </button>
    </div>

<% if user_signed_in? %>

    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">envoyer une demande de reservation</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">

              <%= render "bookings/form" %>
            </div>
            <div class="modal-footer">

            </div>
        </div>
      </div>
      </div>
     </div>

<% else %>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">envoyer une demande de reservation</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">

              merci de creer un compte ou de vous identifier pour faire une demande de reservation
            </div>
            <div class="modal-footer">

            </div>
        </div>
      </div>
      </div>
     </div>

<% end %>



  </div>



  <div class="row formulaire">
    <div class="col-sm-12">
      <!--Section: Contact v.2-->
<section class="mb-4">

    <!--Section heading-->
    <h2 class="h1-responsive font-weight-bold text-center my-4">Contactez-nous</h2>
    <!--Section description-->
    <p class="text-center w-responsive mx-auto mb-5">Si vous avez la moindre question,n'hesitez pas a nous contacter directement. Notre equipe reviendra vers vous aussi vite que possible
    </p>

    <p class="text-center w-responsive mx-auto mb-5"> <%= render "contacts/form" %> </p>




</section>
<!--Section: Contact v.2-->
    </div>

  </div>



</div>
