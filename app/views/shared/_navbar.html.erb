<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to "/products", class: "navbar-brand" do %>
    <%= image_tag "logoMeinMarseille.png"%>
    <% end %>



  <div class="navbar-categories ">
    <ul class="navbar-categories-list navbar-nav mr-auto" >

      <li classe="categories">
        <div class="dropdown">
<!-- qui sommes nous ? -->
            <div class="dropdown-toggle" id="dropdownMenuButton" data-toggle="dropdown" >
             Über uns?
            </div>
<!-- le projet et l'equipe -->
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
              <%= link_to "Das Projekt", pages_projet_path, class: "dropdown-item" %>
              <%= link_to "Das Team", pages_equipe_path, class: "dropdown-item" %>
            </div>

        </div>
      </li>

      <li classe="categories">
        <div class="dropdown">
<!-- visittes -->
            <div class="dropdown-toggle" id="dropdownMenuButton" data-toggle="dropdown" >
             Führungen
            </div>

            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
              <% @visites10.each do |visite| %>
              <a class="dropdown-item" href="/products/<%= visite.id %>"><%= visite.title %></a>
              <% end %>
            </div>

        </div>
      </li>
<!-- prix -->
      <li classe="catego ">
          <%= link_to "Preise", pages_prix_path, class: "dropdown-item" %>
      </li>

<!-- FAQ -->
      <li classe="catego ">
        <%= link_to "F A Q", pages_faq_path, class: "dropdown-item" %>
      </li>
<!-- contact -->
       <li classe="catego ">
        <%= link_to "Kontakt", pages_contact_path, class: "dropdown-item" %>
      </li>

    </ul>
  </div>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>

        <li class="nav-item dropdown">
          <%= image_tag "icone menu.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">

            <%if current_user.admin %>
            <%= link_to "Zone Admin", pages_zoneadmin_path, class: "dropdown-item" %>

            <p> </p>
            <% else %>
            <% end %>
            <%= link_to "Meine Buchungen", booking_by_user_path, class: "dropdown-item" %>
            <%= link_to "Mein Warenkorb", "/carts/#{session[:cart_id]} ", class: "dropdown-item" %>
            <%= link_to "Meine Infos", "pages/user", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>


</div>
